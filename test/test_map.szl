load test

test.run {no args} 0 map {bad map call: 'map', should be 'map names list exp'}
test.run {one arg} 0 {map a} {bad map call: 'map a', should be 'map names list exp'}
test.run {2 args} 0 {map a b} {bad map call: 'map a b', should be 'map names list exp'}
test.run {too many args} 0 {map a b c d} {bad map call: 'map a b c d', should be 'map names list exp'}

test.run {no names} 0 {map {} {1 2 3} {calc $i + 1}} {bad map call: 'map {} {1 2 3} {calc $i + 1}', should be 'map names list exp'}
test.run {empty list} 1 {map i {} {calc $i + 1}} {}
test.run {short list} 0 {map {x y z} {1 2} {calc $x + 1}} {bad number of values}
test.run {exact list} 1 {map {x y z} {1 2 3} {calc $y + 1}} 3
test.run {long list} 0 {map {x y z} {1 2 3 4} {calc $x + 1}} {bad number of values}
test.run {two iterations, short list} 0 {map {x y z} {1 2 3 4 5 6 7 8} {calc $y + 1}} {bad number of values}
test.run {two iterations, exact list} 1 {map {x y z} {1 2 3 4 5 6} {calc $y + 1}} {3 6}
