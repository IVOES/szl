proc dict.new {
	local d {}
	for {k v} $@ {dict.set d $k $v}
	return $d
}

proc dict.set {
	local i 0

	for {key value} [get $1] {
		if [test $key == $2] {
			list.set $1 [calc $i + 1] $3
			return
		}
		local i [calc $i + 2]
	}

	list.append $1 $2
	list.append $1 $3
}

proc dict.items {
	local i {}
	for {key value} $1 {
		list.append i $key
		list.append i $value
	}
	return $i
}

proc dict.get {
	for {key value} $1 {if [test $key == $2] {return $value}}
	if [test $# == 3] {return $3}
	throw [str.format {missing key: {}} $2]
}
